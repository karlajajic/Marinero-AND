<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marinero_kj">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppIntro">
        <activity android:name=".CityDetail" android:screenOrientation="portrait"/>
        <activity android:name=".Main" android:screenOrientation="portrait"/>
        <activity android:name=".SightListView" android:screenOrientation="portrait" />
        <activity android:name=".CityDetails" android:screenOrientation="portrait" />
        <activity android:name=".Intro" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>